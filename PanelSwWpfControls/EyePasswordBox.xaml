<UserControl x:Class="PanelSW.WPF.Controls.EyePasswordBox" x:Name="me_"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="35"/>
        </Grid.ColumnDefinitions>

        <xceed:WatermarkPasswordBox Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" x:Name="passwordBox_" BorderThickness="0"
                                    Watermark="{Binding ElementName=me_, Path=Watermark}"
                                    Padding="{Binding ElementName=me_, Path=TextPadding}"
                                    Foreground="{Binding ElementName=me_, Path=Foreground}"
                                    Background="{Binding ElementName=me_, Path=Background}"
                                    FontFamily="{Binding ElementName=me_, Path=FontFamily}"
                                    FontSize="{Binding ElementName=me_, Path=FontSize}"
                                    FontStretch="{Binding ElementName=me_, Path=FontStretch}"
                                    FontStyle="{Binding ElementName=me_, Path=FontStyle}"
                                    FontWeight="{Binding ElementName=me_, Path=FontWeight}">
            <xceed:WatermarkPasswordBox.Style>
                <Style TargetType="xceed:WatermarkPasswordBox">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPressed, ElementName=btnShowPassword_}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </xceed:WatermarkPasswordBox.Style>
        </xceed:WatermarkPasswordBox>
        <TextBox Grid.Row="0" Grid.Column="0" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="0" Text="{Binding Password, ElementName=me_, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalContentAlignment="Left" VerticalContentAlignment="Top"
                 Padding="{Binding ElementName=me_, Path=TextPadding}"
                 Foreground="{Binding ElementName=me_, Path=Foreground}"
                 Background="{Binding ElementName=me_, Path=Background}"
                 FontFamily="{Binding ElementName=me_, Path=FontFamily}"
                 FontSize="{Binding ElementName=me_, Path=FontSize}"
                 FontStretch="{Binding ElementName=me_, Path=FontStretch}"
                 FontStyle="{Binding ElementName=me_, Path=FontStyle}"
                 FontWeight="{Binding ElementName=me_, Path=FontWeight}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPressed, ElementName=btnShowPassword_}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Grid.Row="0" Grid.Column="1" Width="{Binding ElementName=me_, Path=EyeWidth}" Height="{Binding ElementName=me_, Path=EyeHeight}" x:Name="btnShowPassword_" BorderThickness="0" Margin="0,0,0,0" Padding="0,0,0,0"
                Background="{Binding ElementName=me_, Path=Background}">
            <!-- Eye image with Apache 2.0 license downloaded from http://www.iconarchive.com/show/noto-emoji-people-clothing-objects-icons-by-google/12125-eye-icon.html -->                
            <Image Source="./Resources/Eye.png" Width="{Binding ElementName=btnShowPassword_, Path=Width}" Height="{Binding ElementName=btnShowPassword_, Path=Height}"/>
        </Button>
    </Grid>
</UserControl>